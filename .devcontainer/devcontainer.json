{
  "name": "Python 3",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [8000],
  "postCreateCommand":{
    "install-python": "pip install -r requirements.txt",
    "install-chrome": "npx -y playwright install chrome",
    "set-port-visibility": "gh cs ports visibility 8000:public -c $CODESPACE_NAME"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "chat.agent.enabled": true,
        "chat.mcp.enabled": true
      }
    }
  }
}
